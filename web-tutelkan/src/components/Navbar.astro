---
import ThemeToggle from './ThemeToggle.astro';
const links = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'Nosotros' },
  { href: '#services', label: 'Servicios' },
  { href: '#portfolio', label: 'Portafolio' },
  { href: '/blog', label: 'Blog' }
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <a href="/" class="flex items-center space-x-2">
        <img src="/images/logo/images_logo_LogoTutelkan.png" alt="Tutelkan logo" class="h-8 w-auto" />
      </a>
      
      <div class="hidden md:block">
        <ul class="flex items-center space-x-8">
          {links.map((link, index) => (
            <li>
              <a 
                href={link.href} 
                class={`text-sm font-medium transition-colors duration-200 hover:text-[#cf3339] ${
                  index === 0 ? 'text-[#cf3339]' : 'text-gray-700'
                }`}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="flex items-center space-x-4">
        <a 
          href="#contact" 
          class="bg-[#cf3339] text-white px-6 py-2 rounded-full text-sm font-medium hover:bg-[#b52d32] transition-colors duration-200"
        >
          Conversemos
        </a>
        <ThemeToggle />
      </div>
      
      <div class="md:hidden">
        <button 
          id="mobile-menu-button"
          type="button" 
          class="text-gray-700 hover:text-[#cf3339] focus:outline-none focus:text-[#cf3339]"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Abrir men√∫ principal</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
      {links.map((link, index) => (
        <a 
          href={link.href} 
          class={`block px-3 py-2 text-base font-medium transition-colors duration-200 hover:text-[#cf3339] ${
            index === 0 ? 'text-[#cf3339]' : 'text-gray-700'
          }`}
        >
          {link.label}
        </a>
      ))}
      <a 
        href="#contact" 
        class="block mx-3 mt-4 bg-[#cf3339] text-white px-4 py-2 rounded-full text-center text-sm font-medium hover:bg-[#b52d32] transition-colors duration-200"
      >
        Conversemos
      </a>
    </div>
  </div>
</nav>

<script src="/src/scripts/navbar.js"></script>
<link rel="stylesheet" href="/src/styles/navbar.css">